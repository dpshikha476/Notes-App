<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>Notes Tonight</title>
</head>

<body>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Your Notes</h1>
        <a href="/new" class="btn btn-success float-right">New Note</a>
        </div>
    </div>
    <div class="container">
        <% notes.forEach(note => { %>
        <div class="card mt-2">
            <div class="card-body">

                <form action="/notes/<%=note._id%>" method="DELETE">
                    <button type="submit" class="btn btn-danger float-right"">x</button>
                </form>

                <h5 class="card-title"><%= note.title %></h5>
                <p class="text-muted">Posted On: <%= note.createdAt.toLocaleDateString() %></p>
                <form action="/" method="GET">
                    <a class="btn btn-primary float-left" href="/notes/<%=note._id%>">View</a>
                </form>
            </div>
        </div>
        <%}) %>
    </div>
</body>

</html>